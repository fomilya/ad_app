<h3>Все объявления</h3>
<% @ad.each do |ad| %>
	<div class="card">
		<div class="card-header">
			<strong><%= ad.title %></strong>
		</div>
		<div class="card-body">
			<div class="row">
				<div class="col-2">
					<% if ad.photo.attached? %>
						<%= image_tag ad.photo.variant(resize: "100x100"), class:"img-fluid" %>
					<% else %>
						<p class="text-center align-middle">No photo</p>
					<% end %>
				</div>
				<div class="col-10">
					<p class="card-text"><%= truncate(ad.description, :length => 160, :separator => ' ') %></p>
					<span class="text-secondary">Дата:
		      </span><%=  %><br>
					<span class="text-secondary">Пользователь:
		      </span><%= User.find(ad.user_id).email %><br>

				</div>
			</div>
			<div class="row">
				<div class="col">
					<%= link_to "Смотреть", ad_path(ad), :class => 'btn btn-outline-primary' %>
				</div>
			</div>
		</div>
	</div>
	<br/>
<% end %>
