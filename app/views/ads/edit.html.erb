<%= form_for :ad, url: ad_path(@ad), method: :patch do |f| %>
<% if @ad.errors.any? %>
	<% @ad.errors.full_messages.each do |msg| %>
		<div class="alert alert-danger"><%= msg %></div>
	<% end %>
<% end %>
<div class="form-group">
	<lable>Название</lable>
	<%= f.text_field :title, :class=> 'form-control' %>
</div>
<div class="form-group">
	Описание<br>
	<%= f.text_area :description, :class=> 'form-control'%>
</div>
<div class="form-group">
	Адрес<br>
	<%= f.text_field :adress, :class=> 'form-control'%>
</div>
<div class="form-group">
 Теги<br>
 <%= f.text_field :tag_names, :class=> 'form-control'%>
</div>
<div class="form-group">
	Опубликовано <%= f.check_box :status, :class=> 'form-control'%>
</div>
<div class="form-group">
	Изображение
	<% if @ad.photo.attached? %>
		<%= image_tag @ad.photo.variant(resize: "100x100"), class:"img-fluid"%>
	<% else %>
		<%= f.file_field :photo, direct_upload: true, accept: 'image/png,image/jpeg'%>
	<% end %>
</div>
<div class="form-group">
	<%= f.submit class: "btn btn-outline-primary"%>
</div>
<% end %>
