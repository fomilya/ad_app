
<h5>Добавлние нового объявления</h5>
<%= form_for :ad, url: ads_path do |f| %>
<% if @ad.errors.any? %>
	<% @ad.errors.full_messages.each do |msg| %>
		<div class="alert alert-danger"><%= msg %></div>
	<% end %>
<% end %>
   <div class="form-group">
  	<lable>Название</lable>
    <%= f.text_field :title, :class=> 'form-control' %>
   </div>
   <div class="form-group">
  	Описание<br>
    <%= f.text_area :description, :class=> 'form-control'%>
   </div>
   <div class="form-group">
  	Изображение
     <%= f.file_field :photo, direct_upload: true, accept: 'image/png,image/jpeg'%>
   </div>
   <div class="form-group">
  	Адрес<br>
    <%= f.text_field :adress, :class=> 'form-control'%>
   </div>
   <div class="form-group">

	  <%= f.label :tag_names %><br>
  	<%= f.text_field :tag_names %>
  	Теги<br>
    <%= f.text_field :tegs, :class=> 'form-control'%>
   </div>
   <div class="form-group">
  	Status<br>
    <%= f.text_field :status, :class=> 'form-control'%>
  </div>
   <div class="form-group">
    <%= f.submit class: "btn btn-outline-primary"%>
   </div>
 <% end %>
